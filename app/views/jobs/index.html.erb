<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Github</th>
    <th>Created at</th>
    <th>Title</th>
    <th>Location</th>
    <th>Type</th>
    <th>Description</th>
    <th>How to apply</th>
    <th>Company</th>
    <th>Company url</th>
    <th>Company logo</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.github_id %></td>
    <td><%= job.created_at %></td>
    <td><%= job.title %></td>
    <td><%= job.location %></td>
    <td><%= job.type %></td>
    <td><%= job.description %></td>
    <td><%= job.how_to_apply %></td>
    <td><%= job.company %></td>
    <td><%= job.company_url %></td>
    <td><%= job.company_logo %></td>
    <td><%= job.url %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Job', new_job_path %>
